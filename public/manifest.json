{
  "manifest_version": 3,
  "name": "Thrifting",
  "version": "0.0.7",
  "description": "CreatorsInc Thrifting extension",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "cookies",
    "nativeMessaging",
    "webNavigation"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["*://*.onlyfans.com/"],
  "content_scripts": [
    {
      "all_frames": true,
      "matches": ["<all_urls>"],
      "js": ["connect.js"],
      "css": ["styles/thrift.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": [
        "libs/*",
        "content.js",
        "request.js",
        "initialize.js",
        "progress.js"
      ]
    }
  ],
  "options_page": "options.html"
}

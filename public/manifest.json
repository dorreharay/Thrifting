{
  "manifest_version": 3,
  "name": "CreatorsInc. Extension",
  "version": "1.6.2",
  "description": "internal tool",
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "cookies",
    "nativeMessaging",
    "webNavigation",
    "browsingData",
    "privacy",
    "history",
    "webRequest",
    "management"
  ],
  "content_scripts": [
    {
      "all_frames": true,
      "matches": ["<all_urls>"],
      "js": ["connect.js"],
      "css": ["styles/thrift.css"],
      "run_at": "document_start"
    },
    {
      "all_frames": true,
      "matches": ["<all_urls>"],
      "js": ["main.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": [
        "libs/*",
        "content.js",
        "request.js",
        "progress.js",
        "thrifting.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["https://*/*"]
}
